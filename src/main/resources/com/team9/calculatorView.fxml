<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="250.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.team9.CalculatorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TextField fx:id="numberField" prefHeight="36.0" prefWidth="152.0" />
    <Label fx:id="calculatedAnswer" text="Answer Here" />
    <Button fx:id="ToggleButton" mnemonicParsing="false" onMouseClicked="#toggleBinaryArabic" text="Binary" />
     <Button mnemonicParsing="false" onAction="#toDecimal" text="Convert to Arabic" />
    <AnchorPane prefHeight="200.0" prefWidth="200.0">
        <Button fx:id="zeroButton" layoutX="7.0" layoutY="18.0" minWidth="25.0" mnemonicParsing="false" onMouseClicked="#enterZero" prefHeight="25.0" prefWidth="32.0" text="0" />
        <Button fx:id="oneButton" layoutX="85.0" layoutY="18.0" mnemonicParsing="false" onMouseClicked="#enterOne" prefHeight="25.0" prefWidth="32.0" text="1" />
        <Button fx:id="additionButton" layoutX="7.0" layoutY="65.0" mnemonicParsing="false" onMouseClicked="#addClicked" prefHeight="25.0" prefWidth="32.0" text="+" />
        <Button fx:id="subtractionButton" alignment="CENTER" layoutX="85.0" layoutY="65.0" mnemonicParsing="false" onMouseClicked="#subtractClicked" prefHeight="25.0" prefWidth="32.0" text="-" />
        <Button fx:id="multiButton" layoutX="159.0" layoutY="65.0" mnemonicParsing="false" onMouseClicked="#multiplyClicked" prefHeight="25.0" prefWidth="32.0" text="*" />
        <Button fx:id="divisionButton" layoutX="7.0" layoutY="106.0" mnemonicParsing="false" onMouseClicked="#divideClicked" prefHeight="25.0" prefWidth="32.0" text="/" />
        <Button fx:id="equalsButton" layoutX="77.0" layoutY="150.0" mnemonicParsing="false" onMouseClicked="#equalClicked" prefHeight="25.0" prefWidth="47.0" text="=" />
        <Button fx:id="squaredButton" layoutX="84.0" layoutY="106.0" mnemonicParsing="false" onMouseClicked="#squareClicked" prefHeight="25.0" prefWidth="32.0" text="x²" />
        <Button fx:id="sqrtButton" layoutX="154.0" layoutY="106.0" mnemonicParsing="false" onMouseClicked="#sqrtClicked" prefHeight="27.0" prefWidth="38.0" text="√x" />
        <Button fx:id="clearButton" layoutX="145.0" layoutY="18.0" mnemonicParsing="false" onMouseClicked="#clearNumberField" text="Clear" />
    </AnchorPane>
</VBox>
